<%= form_with(model: @package, local: true) do |form| %>
    <div class="field">
      <%= form.label :task %>
      <%= form.text_field :task %>
    </div>
  
    <div class="field">
      <%= form.label :ao, "Area of Operation" %>
      <%= form.text_field :ao %>
    </div>
  
    <div class="field">
      <%= form.label :frequency %>
      <%= form.text_field :frequency %>
    </div>
  
    <div class="field">
      <%= form.label :lead_flight_id, "Lead Flight" %>
      <%= form.collection_select :lead_flight_id, @flights, :id, :name, prompt: "Select Lead Flight" %>
    </div>
  
    <div class="field">
      <%= form.label :flight_ids, "Select Flights" %>
      <%= form.collection_select :flight_ids, @flights, :id, :name, {}, multiple: true %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  